# InnerWorld Edu Bot Configuration

# OpenAI API Key (required for LLM conversation)
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Tokens
CHILD_BOT_TOKEN=your_child_bot_token_here
PARENT_BOT_TOKEN=your_parent_bot_token_here

# Environment
ENVIRONMENT=development  # development | production
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR

# Database (for Therapeutic Mode - optional for Educational Mode)
# DATABASE_URL=postgresql://user:password@localhost/innerworld_edu

# Parent Dashboard
WEEKLY_REPORT_DAY=0  # 0=Monday, 6=Sunday
WEEKLY_REPORT_HOUR=9  # 9:00 AM

# Feature Flags
ENABLE_PARENT_DASHBOARD=true
ENABLE_SCREENING_SYSTEM=true
ENABLE_THERAPEUTIC_MODE=false  # Not yet implemented
